<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CommissionDetail">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Commission"
        android:id="@+id/tv_commission"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="36dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16"
        android:text="Client            : "
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/tv_commission"
        android:layout_marginTop="@dimen/dimen_24"
        android:id="@+id/tv_client" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designer      :"
        android:id="@+id/tv_designer"
        android:layout_marginTop="8dp"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_client"
        app:layout_constraintTop_toBottomOf="@id/tv_client" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:id="@+id/tv_client_name"
        app:layout_constraintLeft_toRightOf="@id/tv_client"
        app:layout_constraintTop_toTopOf="@id/tv_client"
        android:textSize="20dp"
        android:layout_marginLeft="@dimen/dimen_8"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designer"
        android:id="@+id/tv_designer_name"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@id/tv_client_name"
        app:layout_constraintTop_toTopOf="@id/tv_designer"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxWidth="350dp"
        android:id="@+id/tv_desc"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintLeft_toLeftOf="@id/tv_date"
        android:ellipsize="none"
        android:maxLines="100"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/dimen_8"
        android:text="Description Description Description Description"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_date"
        android:text="date"
        android:textSize="20dp"
        android:layout_marginTop="@dimen/dimen_8"
        app:layout_constraintTop_toBottomOf="@id/tv_designer"
        app:layout_constraintLeft_toLeftOf="@id/tv_designer"
        />

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/btn_cancel"
        android:layout_marginTop="36dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_8"
        app:layout_constraintRight_toLeftOf="@id/btn_accept"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"/>

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Accept"
        android:id="@+id/btn_accept"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginHorizontal="@dimen/dimen_8"
        app:layout_constraintLeft_toRightOf="@id/btn_cancel"
        app:layout_constraintTop_toTopOf="@id/btn_cancel"/>


</androidx.constraintlayout.widget.ConstraintLayout>